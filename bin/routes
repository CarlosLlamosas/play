# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                            controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                       controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                     controllers.AsyncController.message

#Cliente
GET		/cliente/lista				 controllers.ClienteController.lista()
GET     /cliente/:id                 controllers.ClienteController.show(id : Integer)
GET     /cliente/edit/:id            controllers.ClienteController.edit(id : Integer)
POST    /cliente/edit                controllers.ClienteController.update()
PUT     /cliente/create              controllers.ClienteController.save()
GET     /cliente/delete/:id          controllers.ClienteController.delete(id : Integer)

#Entidad
GET		/entidad/lista				 controllers.EntidadController.lista()
PUT     /entidad/create              controllers.EntidadController.save()
GET     /entidad/delete/:id          controllers.EntidadController.delete(id : Integer)
POST    /entidad/edit                controllers.EntidadController.update()

#TipoCliente
GET		/tipocliente/lista				 controllers.TipoClienteController.lista()
PUT     /tipocliente/create              controllers.TipoClienteController.save()
GET     /tipocliente/delete/:id          controllers.TipoClienteController.delete(id : Integer)
POST    /tipocliente/edit                controllers.TipoClienteController.update()




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
